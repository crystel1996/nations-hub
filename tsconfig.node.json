{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@nations-hub/assets/*": ["src/assets/*"],
      "@nations-hub/components/*": ["src/components/*"],
      "@nations-hub/pages/*": ["src/pages/*"],
      "@nations-hub/routes/*": ["src/routes/*"],
      "@nations-hub/services/*": ["src/services/*"],
      "@nations-hub/store/*": ["src/store/*"],
      "@nations-hub/utils/*": ["src/utils/*"]
    }
  },
  "include": ["vite.config.ts"]
}
